                    android:text="1"
                    android:textColor="#FFF"
                    android:alpha="0.2"
                    android:id="@+id/button" />
                <Button
                    style="@style/uicon_values_1_to_4"
                    android:text="2"
                    android:textColor="#FFF"
                    android:alpha="0.4"
                    android:id="@+id/button" />
                <Button
                    style="@style/uicon_values_1_to_4"
                    android:text="3"
                    android:textColor="#FFF"
                    android:alpha="0.6"
                    android:id="@+id/button" />
                <Button
                    style="@style/uicon_values_1_to_4"
                    android:text="4"
                    android:textColor="#FFF"
                    android:alpha="0.8"
                    android:id="@+id/button" />
                <Button
                    style="@style/uicon_value_5"
                    android:text="5"
                    android:textColor="#FFF"
                    android:id="@+id/button" />

            </LinearLayout>
            <!-- entry -->

            <!-- entry -->
