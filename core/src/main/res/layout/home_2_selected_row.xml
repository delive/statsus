<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <!-- entry -->
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dip"
            android:layout_marginRight="8dip"
            android:layout_marginTop="10dp"
            android:id="@+id/linearLayout1">

        <ImageButton
                android:id="@+id/stat_icon_button"
                android:src="@drawable/uicons_smiley"
                style="@style/uicon_container"/>

        <Button
                style="@style/uicon_whitebg_text"
                android:text="Stat"
                android:textColor="#c82d2f"
                android:id="@+id/statName"
                android:layout_width="match_parent"/>

        <Button
                style="@style/uicon_values_1_to_4"
                android:text="1"
                android:id="@+id/stat_selected_1"
                android:textColor="#FFF"
                android:alpha="0.2"/>
        <Button
                style="@style/uicon_values_1_to_4"
                android:text="2"
                android:id="@+id/stat_selected_2"
                android:textColor="#FFF"
                android:alpha="0.4"/>
        <Button
                style="@style/uicon_values_1_to_4"
                android:text="3"
                android:id="@+id/stat_selected_3"
                android:textColor="#FFF"
                android:alpha="0.6"/>
        <Button
                style="@style/uicon_values_1_to_4"
                android:text="4"
                android:id="@+id/stat_selected_4"
                android:textColor="#FFF"
                android:alpha="0.8"/>
        <Button
                style="@style/uicon_value_5"
                android:text="5"
                android:id="@+id/stat_selected_5"
                android:textColor="#FFF"/>

    </LinearLayout>
</LinearLayout>