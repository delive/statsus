<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:background="@string/bgcolor1"
    android:layout_height="fill_parent">


    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="0dp"
        android:paddingRight="0dp"
        android:paddingTop="10dp"
        android:background="@string/bgcolor1"
        android:paddingBottom="@dimen/activity_vertical_margin"
        tools:context="com.example.statsusv1.statsusv1.Statsus">


        <ImageView
            android:layout_width="150dp"
            android:contentDescription="@string/app_name"
            android:layout_height="wrap_content"
            android:id="@+id/logo_image"
            android:adjustViewBounds="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft = "8dip"
            android:layout_marginTop = "6dip"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:src="@drawable/logo_statsus" />

        <ImageButton
            android:id="@+id/settings_button"
            android:contentDescription="@string/settings_button"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight = "8dip"
            android:layout_marginTop = "2dip"
            android:layout_alignParentEnd="true"
            android:src="@drawable/icon_settings"
            android:scaleType="fitCenter"
            android:adjustViewBounds="true"
            style="@style/settings_button" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_marginTop = "10dp"
            android:paddingTop="15dp"
            android:paddingBottom="15dp"
            android:layout_height="wrap_content"
            android:background="@string/bgcolor2"
            android:layout_below="@+id/settings_button"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:id="@+id/top_navigation_container">

            <Button
                android:layout_width="fill_parent"
                android:layout_weight="1"
                android:text="@string/bt_my_day"
                android:onClick="myDay"
                android:id="@+id/bt_my_day"
                android:layout_marginLeft = "8dip"
                style="@style/blue_button" />

            <Button
                android:layout_width="fill_parent"
                android:layout_weight="1"
                android:text="@string/bt_stats"
                android:id="@+id/bt_stats"
                android:onClick="myStats"
                android:layout_marginLeft = "8dip"
                android:layout_marginRight = "8dip"
                style="@style/gray_button" />

            <Button
                android:layout_width="fill_parent"
                android:layout_weight="1"
                android:text="@string/bt_friends"
                android:id="@+id/bt_friends"
                android:layout_marginRight = "8dip"
                style="@style/gray_button" />

        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/sub_text_3"
            android:layout_below="@+id/top_navigation_container"
            android:id="@+id/sub_text_3"
            android:layout_marginLeft = "8dip"
            android:layout_marginRight = "8dip"
            android:layout_marginTop = "15dip"
            android:layout_marginBottom="15dp"
            android:textColor="@string/main_color_1"
            android:textSize="22sp" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/sub_text_3"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:orientation="vertical"
            android:background="#eaeaea"
            android:paddingBottom="15dp"
            android:paddingTop="15dp"
            android:id="@+id/item_picks">

            <!-- entry -->
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft = "8dip"
                android:layout_marginRight = "8dip"
                android:id="@+id/linearLayout1">

                <ImageButton
                    android:id="@+id/item_icon_pick_1"
                    android:contentDescription="@string/item_icon"
                    android:src="@drawable/uicons_videogames"
                    android:background="@string/sub_color_1"
                    style="@style/colored_squared" />

                <Button
                    style="@style/white_bg_text"
                    android:text="@string/item_text"
                    android:textColor="@string/sub_color_1"
                    android:layout_width="match_parent"
                    android:id="@+id/white_bg_text1" />

                <Button
                    android:text="@string/value1"
                    android:textColor="@string/main_color_2"
                    android:alpha="0.2"
                    android:id="@+id/value11"
                    android:background="@string/sub_color_1"
                    style="@style/colored_squared" />
                <Button
                    android:text="@string/value2"
                    android:textColor="#cccccc"
                    android:id="@+id/value12"
                    android:background="@string/main_color_2"
                    style="@style/colored_squared" />
                <Button
                    android:text="@string/value3"
                    android:textColor="@string/main_color_2"
                    android:alpha="0.6"
                    android:id="@+id/value13"
                    android:background="@string/sub_color_1"
                    style="@style/colored_squared" />
                <Button
                    android:text="@string/value4"
                    android:textColor="@string/main_color_2"
                    android:alpha="0.8"
                    android:id="@+id/value14"
                    android:background="@string/sub_color_1"
                    style="@style/colored_squared" />
                <ImageButton
                    android:src="@drawable/custom_value_white"
                    android:textColor="@string/main_color_2"
                    android:contentDescription="@string/custom_value"
                    android:id="@+id/value_custom1"
                    android:padding="3dp"
                    android:background="@string/sub_color_1"
                    style="@style/colored_squared" />

            </LinearLayout>
            <!-- entry -->

            <!-- entry -->
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft = "8dip"
                android:layout_marginRight = "8dip"
                android:layout_marginTop="10dp"
                android:id="@+id/linearLayout2">

                <ImageButton
                    android:id="@+id/item_icon_pick_2"
                    android:contentDescription="@string/item_icon"
                    android:src="@drawable/uicons_chess"
                    android:background="@string/sub_color_3"
                    style="@style/colored_squared" />

                <Button
                    style="@style/white_bg_text"
                    android:text="@string/item_text"
                    android:textColor="#952336"
                    android:layout_width="match_parent"
                    android:id="@+id/white_bg_text2" />

                <Button
                    android:text="@string/value1"
                    android:textColor="@string/main_color_2"
                    android:alpha="0.2"
                    android:id="@+id/value21"
                    android:background="@string/sub_color_3"
                    style="@style/colored_squared" />
                <Button
                    android:text="@string/value2"
                    android:textColor="@string/main_color_2"
                    android:alpha="0.4"
                    android:id="@+id/value22"
                    android:background="@string/sub_color_3"
                    style="@style/colored_squared" />
                <Button
                    android:text="@string/value3"
                    android:textColor="@string/main_color_2"
                    android:alpha="0.6"
                    android:id="@+id/value23"
                    android:background="@string/sub_color_3"
                    style="@style/colored_squared" />
                <Button
                    android:text="@string/value4"
                    android:textColor="#cccccc"
                    android:id="@+id/value24"
                    android:background="@string/main_color_2"
                    style="@style/colored_squared" />
                <ImageButton
                    android:src="@drawable/custom_value_white"
                    android:contentDescription="@string/custom_value"
                    android:textColor="@string/main_color_2"
                    android:id="@+id/value_custom2"
                    android:padding="3dp"
                    android:background="@string/sub_color_3"
                    style="@style/colored_squared" />

            </LinearLayout>
            <!-- entry -->

            <!-- entry -->
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft = "8dip"
                android:layout_marginRight = "8dip"
                android:layout_marginTop="10dp"
                android:id="@+id/linearLayout3">

                <ImageButton
                    android:id="@+id/item_icon_pick_3"
                    android:contentDescription="@string/item_icon"
                    android:src="@drawable/uicons_smiley"
                    android:background="@string/sub_color_5"
                    style="@style/colored_squared" />

                <Button
                    style="@style/white_bg_text"
                    android:text="@string/item_text"
                    android:textColor="#952336"
                    android:layout_width="match_parent"
                    android:id="@+id/white_bg_text3" />

                <Button
                    android:text="@string/value1"
                    android:textColor="@string/main_color_2"
                    android:alpha="0.2"
                    android:id="@+id/value31"
                    android:background="@string/sub_color_5"
                    style="@style/colored_squared" />
                <Button
                    android:text="@string/value2"
                    android:textColor="@string/main_color_2"
                    android:alpha="0.4"
                    android:id="@+id/value32"
                    android:background="@string/sub_color_5"
                    style="@style/colored_squared" />
                <Button
                    android:text="@string/value3"
                    android:textColor="@string/main_color_2"
                    android:alpha="0.6"
                    android:id="@+id/value33"
                    android:background="@string/sub_color_5"
                    style="@style/colored_squared" />
                <Button
                    android:text="@string/value4"
                    android:textColor="@string/main_color_2"
                    android:alpha="0.8"
                    android:id="@+id/value34"
                    android:background="@string/sub_color_5"
                    style="@style/colored_squared" />
                <ImageButton
                    android:src="@drawable/custom_value_gray"
                    android:contentDescription="@string/custom_value"
                    android:id="@+id/value_custom3"
                    android:padding="3dp"
                    android:background="@string/main_color_2"
                    style="@style/colored_squared" />

            </LinearLayout>
            <!-- entry -->

            <!-- 1 row of 2 buttons with text and icon starts -->
            <LinearLayout
                android:orientation="horizontal"
                android:baselineAligned="false"
                android:layout_width="fill_parent"
                android:layout_marginTop = "10dp"
                android:layout_marginLeft = "4dip"
                android:layout_marginRight = "4dip"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="fill_parent"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:id="@+id/linearLayout">

                    <Button
                        android:layout_width="fill_parent"
                        android:text="@string/cancel"
                        android:layout_marginLeft = "4dip"
                        android:layout_marginRight = "4dip"
                        android:id="@+id/cancel"
                        android:onClick="myStats"
                        style="@style/blue_button" />
                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="fill_parent"
                    android:layout_weight="1"
                    android:layout_height="wrap_content">

                    <Button
                        android:layout_width="fill_parent"
                        android:text="@string/submit"
                        android:layout_marginLeft = "4dip"
                        android:layout_marginRight = "4dip"
                        android:id="@+id/submit"
                        android:onClick="myStats"
                        style="@style/blue_button" />

                </LinearLayout>
            </LinearLayout>
            <!-- 1 row of 2 buttons with text and icon ends -->


        </LinearLayout>


        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_below="@+id/item_picks"
            android:id="@+id/all_items_container"
            android:layout_marginTop = "15dip"
            android:paddingBottom="15dp"
            android:paddingLeft="4dp"
            android:paddingRight="4dp"
            android:background="@string/bgcolor2"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/sub_text_1"
                android:id="@+id/textView3"
                android:layout_marginLeft = "4dip"
                android:layout_marginRight = "4dip"
                android:layout_marginTop = "15dip"
                android:textColor="@string/main_color_1"
                android:textSize="22sp" />

            <!-- 1 row of 2 buttons with text and icon starts -->
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_marginTop = "15dp"
                android:layout_height="wrap_content"
                android:baselineAligned="false">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="fill_parent"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft = "4dip"
                    android:layout_marginRight = "4dip">

                    <ImageButton
                        android:id="@+id/item_icon_1"
                        android:contentDescription="@string/item_icon"
                        android:src="@drawable/uicons_restaurant"
                        android:background="@string/sub_color_1"
                        style="@style/colored_squared" />

                    <Button
                        style="@style/uicon_text"
                        android:text="@string/item_text"
                        android:textColor="@string/sub_color_1"
                        android:id="@+id/item_text_1" />

                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="fill_parent"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft = "4dip"
                    android:layout_marginRight = "4dip">

                    <ImageButton
                        android:id="@+id/item_icon_2"
                        android:contentDescription="@string/item_icon"
                        android:src="@drawable/uicons_videogames"
                        android:background="@string/sub_color_2"
                        style="@style/colored_squared" />

                    <Button
                        style="@style/uicon_text"
                        android:text="@string/item_text"
                        android:textColor="@string/sub_color_2"
                        android:id="@+id/item_text_2" />

                </LinearLayout>
            </LinearLayout>
            <!-- 1 row of 2 buttons with text and icon ends -->

            <!-- 1 row of 2 buttons with text and icon starts -->
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_marginTop = "10dp"
                android:baselineAligned="false"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="fill_parent"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft = "4dip"
                    android:layout_marginRight = "4dip">

                    <ImageButton
                        android:id="@+id/item_icon_3"
                        android:contentDescription="@string/item_icon"
                        android:src="@drawable/uicons_smiley"
                        android:background="@string/sub_color_3"
                        style="@style/colored_squared" />

                    <Button
                        style="@style/uicon_text"
                        android:text="@string/item_text"
                        android:textColor="@string/sub_color_3"
                        android:id="@+id/item_text_3" />

                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="fill_parent"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft = "4dip"
                    android:layout_marginRight = "4dip">

                    <ImageButton
                        android:id="@+id/item_icon_4"
                        android:contentDescription="@string/item_icon"
                        android:src="@drawable/uicons_chess"
                        android:background="@string/sub_color_4"
                        style="@style/colored_squared" />

                    <Button
                        style="@style/uicon_text"
                        android:text="@string/item_text"
                        android:textColor="@string/sub_color_4"
                        android:id="@+id/item_text_4" />

                </LinearLayout>
            </LinearLayout>
            <!-- 1 row of 2 buttons with text and icon ends -->

            <!-- 1 row of 2 buttons with text and icon starts -->
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_marginTop = "10dp"
                android:baselineAligned="false"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft = "4dip"
                    android:layout_marginRight = "4dip">

                    <ImageButton
                        android:id="@+id/item_icon_5"
                        android:contentDescription="@string/item_icon"
                        android:src="@drawable/uicons_movie"
                        android:background="@string/sub_color_5"
                        style="@style/colored_squared" />

                    <Button
                        style="@style/uicon_text"
                        android:text="@string/item_text"
                        android:textColor="@string/sub_color_5"
                        android:id="@+id/item_text_5" />

                </LinearLayout>

                <LinearLayout
                    style="@style/row_with_one_item">

                    <!-- row with only one button -->

                </LinearLayout>
            </LinearLayout>
            <!-- 1 row of 2 buttons with text and icon ends -->

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_marginTop = "15dp"
                android:layout_height="1dp"
                android:background="#20FFFFFF"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="4dp"
                android:id="@+id/divider">
            </LinearLayout>

            <!-- Remove & Add More Items -->
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_marginTop = "15dp"
                android:baselineAligned="false"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="fill_parent"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft = "4dip"
                    android:layout_marginRight = "4dip">

                    <Button
                        android:layout_width="fill_parent"
                        android:text="@string/remove_items"
                        android:id="@+id/remove_items"
                        android:onClick="myStats"
                        style="@style/gray_button" />

                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="fill_parent"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft = "4dip"
                    android:layout_marginRight = "4dip">

                    <Button
                        android:layout_width="fill_parent"
                        android:text="@string/add_more_items"
                        android:id="@+id/add_more_items"
                        android:onClick="myStats"
                        style="@style/gray_button" />

                </LinearLayout>
            </LinearLayout>
            <!--Remove & Add More Items -->

        </LinearLayout>


    </RelativeLayout>

</ScrollView>