<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:background="#151515"
    android:layout_height="fill_parent">


    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="0dp"
        android:paddingRight="0dp"
        android:paddingTop="10dp"
        android:background="#151515"
        android:paddingBottom="@dimen/activity_vertical_margin"
        tools:context="com.example.statsusv1.statsusv1.Statsus">


        <ImageView
            android:layout_width="150dp"
            android:contentDescription="@string/app_name"
            android:layout_height="wrap_content"
            android:id="@+id/logo_image"
            android:adjustViewBounds="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft = "8dip"
            android:layout_marginTop = "6dip"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:src="@drawable/logo_statsus" />

        <ImageButton
            android:id="@+id/settings_button"
            android:contentDescription="@string/settings_button"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight = "8dip"
            android:layout_marginTop = "2dip"
            android:layout_alignParentEnd="true"
            android:src="@drawable/icon_settings"
            android:scaleType="fitCenter"
            android:adjustViewBounds="true"
            style="@style/settings_button" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_marginTop = "10dp"
            android:paddingTop="15dp"
            android:paddingBottom="15dp"
            android:layout_height="wrap_content"
            android:background="#000"
            android:layout_below="@+id/settings_button"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:id="@+id/top_navigation_container">

            <Button
                android:layout_width="fill_parent"
                android:layout_weight="1"
                android:text="@string/bt_my_day"
                android:onClick="myDay"
                android:id="@+id/bt_my_day"
                android:layout_marginLeft = "8dip"
                style="@style/blue_button" />

            <Button
                android:layout_width="fill_parent"
                android:layout_weight="1"
                android:text="@string/bt_stats"
                android:id="@+id/bt_stats"
                android:onClick="myStats"
                android:layout_marginLeft = "8dip"
                android:layout_marginRight = "8dip"
                style="@style/gray_button" />

            <Button
                android:layout_width="fill_parent"
                android:layout_weight="1"
                android:text="@string/bt_friends"
                android:id="@+id/bt_friends"
                android:layout_marginRight = "8dip"
                style="@style/gray_button" />

        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/sub_text_2"
            android:id="@+id/textView3"
            android:layout_marginLeft = "8dip"
            android:layout_marginRight = "8dip"
            android:layout_marginTop = "15dip"
            android:textColor="#2d9dfb"
            android:layout_below="@+id/top_navigation_container"
            android:textSize="22sp" />

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView3"
            android:id="@+id/icons_to_edit">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft = "8dip"
            android:layout_marginRight = "8dip"
            android:layout_marginTop="15dp">


            <ImageButton
                android:id="@+id/item_icon_1"
                android:contentDescription="@string/item_icon"
                android:src="@drawable/uicons_smiley"
                android:background="#952336"
                style="@style/colored_squared" />

            <Button
                style="@style/uicon_text"
                android:text="@string/item_text"
                android:textColor="#952336"
                android:id="@+id/item_text_1" />

        </LinearLayout>


        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft = "8dip"
            android:layout_marginRight = "8dip"
            android:layout_marginTop="10dp">


            <ImageButton
                android:id="@+id/item_icon_2"
                android:contentDescription="@string/item_icon"
                android:src="@drawable/uicons_smiley"
                android:background="#952336"
                style="@style/colored_squared" />

            <Button
                style="@style/uicon_text"
                android:text="@string/item_text"
                android:textColor="#952336"
                android:id="@+id/item_text_2" />

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft = "8dip"
            android:layout_marginRight = "8dip"
            android:layout_marginTop="10dp">


            <ImageButton
                android:id="@+id/item_icon_3"
                android:contentDescription="@string/item_icon"
                android:src="@drawable/uicons_smiley"
                android:background="#952336"
                style="@style/colored_squared" />

            <Button
                style="@style/uicon_text"
                android:text="@string/item_text"
                android:textColor="#952336"
                android:id="@+id/item_text_3" />

        </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_below="@+id/icons_to_edit"
            android:paddingBottom="15dp"
            android:layout_marginTop="15dp"
            android:paddingLeft="4dp"
            android:paddingRight="4dp"
            android:background="#000"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:id="@+id/item_being_edited">


            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft = "4dip"
                android:layout_marginRight = "4dip"
                android:layout_marginTop="15dp"
                android:background="#0d0d0d"
                android:id="@+id/iconpreview1">


                <ImageButton
                    android:id="@+id/item_icon_preview"
                    android:contentDescription="@string/item_icon"
                    android:src="@drawable/uicons_smiley"
                    android:background="#952336"
                    style="@style/colored_squared" />

                <Button
                    style="@style/uicon_text"
                    android:text="@string/item_text_preview"
                    android:textColor="#952336"
                    android:id="@+id/item_text_preview" />

            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_marginTop = "15dp"
                android:layout_marginBottom = "15dp"
                android:layout_height="1dp"
                android:background="#20FFFFFF"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="4dp"
                android:id="@+id/divider">
            </LinearLayout>


            <EditText
                android:layout_width="fill_parent"
                android:id="@+id/editText2"
                android:layout_marginLeft = "4dip"
                android:layout_marginRight = "4dip"
                android:text="@string/item_name"
                android:inputType="text"
                android:paddingLeft="15dp"
                android:layout_height="40dp"
                style="@style/input_black"/>

            <!-- 1 row of 2 buttons with text and icon starts -->
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_marginTop = "10dp"
                android:baselineAligned="false"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="fill_parent"
                    android:layout_weight="1"
                    android:layout_height="wrap_content">

                    <Button
                        android:layout_width="fill_parent"
                        android:text="@string/change_icon"
                        android:layout_marginLeft = "4dip"
                        android:layout_marginRight = "4dip"
                        android:id="@+id/change_icon"
                        style="@style/gray_button" />
                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="fill_parent"
                    android:layout_weight="1"
                    android:layout_height="wrap_content">

                    <Button
                        android:layout_width="fill_parent"
                        android:text="@string/change_color"
                        android:layout_marginLeft = "4dip"
                        android:layout_marginRight = "4dip"
                        android:id="@+id/change_color"
                        style="@style/gray_button" />

                </LinearLayout>
            </LinearLayout>
            <!-- 1 row of 2 buttons with text and icon ends -->




            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_marginTop = "15dp"
                android:layout_height="1dp"
                android:background="#20FFFFFF"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="4dp"
                android:id="@+id/divider_2">
            </LinearLayout>

            <!-- 1 row of 2 buttons with text and icon starts -->
            <LinearLayout
                android:baselineAligned="false"
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_marginTop = "15dp"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="fill_parent"
                    android:layout_weight="1"
                    android:layout_height="wrap_content">

                    <Button
                        android:layout_width="fill_parent"
                        android:text="@string/cancel"
                        android:layout_marginLeft = "4dip"
                        android:layout_marginRight = "4dip"
                        android:id="@+id/cancel"
                        style="@style/blue_button" />
                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="fill_parent"
                    android:layout_weight="1"
                    android:layout_height="wrap_content">

                    <Button
                        android:layout_width="fill_parent"
                        android:text="@string/submit"
                        android:layout_marginLeft = "4dip"
                        android:layout_marginRight = "4dip"
                        android:id="@+id/submit"
                        style="@style/blue_button" />

                </LinearLayout>
            </LinearLayout>
            <!-- 1 row of 2 buttons with text and icon ends -->


        </LinearLayout>

        <!-- 1 row of 2 buttons with text and icon starts -->
        <LinearLayout
            android:orientation="horizontal"
            android:baselineAligned="false"
            android:layout_width="fill_parent"
            android:layout_marginTop = "15dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft = "4dip"
            android:layout_marginRight = "4dip"
            android:layout_below="@+id/item_being_edited"
            android:id="@+id/linearLayout">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_marginLeft = "4dip"
                android:layout_marginRight = "4dip">

                <Button
                    android:layout_width="fill_parent"
                    android:text="@string/cancel"
                    android:id="@+id/cancel_2"
                    style="@style/gray_button" />

            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_marginLeft = "4dip"
                android:layout_marginRight = "4dip">

                <Button
                    android:layout_width="fill_parent"
                    android:text="@string/finished"
                    android:id="@+id/finished"
                    style="@style/gray_button" />

            </LinearLayout>
        </LinearLayout>
        <!-- 1 row of 2 buttons with text and icon ends -->

    </RelativeLayout>

</ScrollView>