<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
         <item name="android:windowNoTitle">true</item>

    </style>

    <style name="white_button" parent="android:Widget">
        <item name="android:background">@drawable/white_button</item>
        <item name="android:textColor">@color/main_color_1</item>
        <item name="android:layout_height">35dp</item>
        <item name="android:layout_width">35dp</item>
    </style>

    <style name="white_bg_text" parent="android:Widget">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">34dp</item>
        <item name="android:paddingTop">0dp</item>
        <item name="android:paddingBottom">0dp</item>
        <item name="android:paddingLeft">6dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">left|center_vertical</item>
        <item name="android:background">@color/main_color_2</item>
    </style>


    <style name="blue_button" parent="android:Widget">
        <item name="android:background">@color/main_color_1</item>
        <item name="android:textColor">@color/main_color_2</item>
        <item name="android:layout_height">35dp</item>
        <item name="android:paddingTop">0dp</item>
        <item name="android:paddingBottom">0dp</item>
    </style>

    <style name="gray_button" parent="android:Widget">
        <item name="android:background">@drawable/bt_gray_full</item>
        <item name="android:textColor">@color/main_color_1</item>
        <item name="android:layout_height">34dp</item>
        <item name="android:paddingTop">0dp</item>
        <item name="android:paddingBottom">0dp</item>
    </style>

    <style name="input_black" parent="android:Widget">
        <item name="android:background">@drawable/input_black</item>
        <item name="android:textColor">@color/main_color_1</item>
        <item name="android:layout_height">34dp</item>
        <item name="android:paddingTop">0dp</item>
        <item name="android:paddingBottom">0dp</item>
    </style>

    <style name="uicon_text" parent="android:Widget">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">34dp</item>
        <item name="android:padding">6dp</item>
        <item name="android:layout_alignParentTop">true</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:scaleType">fitCenter</item>

        <item name="android:layout_marginRight">-1dp</item>

        <item name="android:gravity">left|center_vertical</item>
        <item name="android:background">@drawable/bt_gray_full_2</item>
    </style>

    <style name="colored_squared" parent="android:Widget">
        <item name="android:layout_height">34dp</item>
        <item name="android:layout_width">34dp</item>
        <item name="android:padding">6dp</item>
        <item name="android:layout_alignParentTop">true</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:scaleType">fitCenter</item>
    </style>

    <style name="settings_button" parent="android:Widget">
        <item name="android:background">@drawable/bt_gray_full</item>
        <item name="android:padding">6dp</item>
        <item name="android:textColor">#2d9dfb</item>
        <item name="android:layout_height">34dp</item>
        <item name="android:layout_width">34dp</item>
    </style>


    <style name="row_with_one_item" parent="android:Widget">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_marginLeft">4dip</item>
        <item name="android:layout_marginRight">4dip</item>
    </style>

    <style name="stats_label" parent="android:Widget">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">8dip</item>
        <item name="android:layout_marginRight">4dip</item>
        <item name="android:textColor">@color/main_color_1</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="stats_value" parent="android:Widget">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">4dip</item>
        <item name="android:layout_marginRight">8dip</item>
        <item name="android:textColor">@color/main_color_2</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="stats_divider" parent="android:Widget">
        <item name="android:orientation">horizontal</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:background">#20FFFFFF</item>
        <item name="android:layout_marginLeft">8dp</item>
        <item name="android:layout_marginRight">8dp</item>
    </style>

    <style name="icon_gallery_entry" parent="android:Widget">
        <item name="android:layout_height">50dp</item>
        <item name="android:layout_width">35dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:padding">6dp</item>
        <item name="android:layout_marginLeft">2dp</item>
        <item name="android:layout_marginRight">2dp</item>
        <item name="android:layout_alignParentTop">true</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:scaleType">fitCenter</item>
    </style>

    <!--old styles that are no longer needed-->
    <!--old styles that are no longer needed-->
    <!--old styles that are no longer needed-->


    <style name="uicon_container" parent="android:Widget">
        <item name="android:layout_height">35dp</item>
        <item name="android:layout_width">35dp</item>
        <item name="android:layout_alignParentTop">true</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:scaleType">fitCenter</item>
        <item name="android:background">@drawable/icon_bg_red_1</item>
    </style>

    <style name="uicon_container_remove" parent="android:Widget">
        <item name="android:layout_height">35dp</item>
        <item name="android:layout_width">35dp</item>
        <item name="android:layout_alignParentTop">true</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:scaleType">fitCenter</item>
        <item name="android:background">@drawable/icon_bg_gray</item>
    </style>

    <style name="note_container" parent="android:Widget">
        <item name="android:layout_height">35dp</item>
        <item name="android:layout_width">35dp</item>
        <item name="android:layout_alignParentTop">true</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:scaleType">fitCenter</item>
        <item name="android:background">@drawable/note_bg_white</item>
    </style>

    <style name="uicon_whitebg_text" parent="android:Widget">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">35dp</item>
        <item name="android:paddingTop">0dp</item>
        <item name="android:paddingBottom">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_marginLeft">-2dp</item>
        <item name="android:gravity">left|center_vertical</item>
        <item name="android:background">@drawable/icon_txt_whitebg</item>
    </style>

    <style name="uicon_values_1_to_4" parent="android:Widget">
        <item name="android:layout_height">35dp</item>
        <item name="android:layout_width">35dp</item>
        <item name="android:layout_alignParentTop">true</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:scaleType">fitCenter</item>
        <item name="android:background">@drawable/values_1_to_4_bg</item>
    </style>

    <style name="uicon_value_5" parent="android:Widget">
        <item name="android:layout_height">35dp</item>
        <item name="android:layout_width">35dp</item>
        <item name="android:layout_alignParentTop">true</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:scaleType">fitCenter</item>
        <item name="android:background">@drawable/value_5_bg</item>
    </style>

    <style name="uicon_value_5_remove" parent="android:Widget">
        <item name="android:layout_height">35dp</item>
        <item name="android:layout_width">35dp</item>
        <item name="android:layout_alignParentTop">true</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:scaleType">fitCenter</item>
        <item name="android:background">@drawable/value_5_bg_remove</item>
    </style>

    <!--old styles that are no longer needed-->




</resources>
